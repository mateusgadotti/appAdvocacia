@model AppAdvocacia.ViewModels.ProcessoIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Processo</h2>

@if (@Model.Processo.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Processo</th></tr>
        </thead>
        <tbody>
            @foreach (var processo in Model.Processo)
            {
                <tr><td>@Html.ActionLink(@processo.Nome, "Details", new { processo.Id })</td></tr>
            }
        </tbody>
    </table>
}
else
{
    <p>We don't have any customers yet.</p>
}

